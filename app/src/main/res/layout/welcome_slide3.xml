<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#c435e7">

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:text="Esto es lo que vas a ver si entras a una leccion de Whatsapp si activaste correctamente el permiso en la anterior explicacion"/>


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_below="@id/intro"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="320dp"
            android:background="@drawable/paso4"
            android:layout_centerHorizontal="true"/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/explicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        android:layout_below="@id/logo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Siempre que necesites ayuda presiona sobre la cara de Alfred"/>

<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        android:layout_below="@id/explicacion"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:text="Ya estamos por terminar"/>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

</LinearLayout>
</RelativeLayout>