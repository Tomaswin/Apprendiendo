<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:id="@+id/number_count"
            tools:text="Detail"
            android:textSize="12sp"
            android:textColor="#000000"
            android:paddingEnd="4dp"
            android:maxLines="1"
            android:layout_marginEnd="2dp"
            android:layout_alignParentEnd="true"/>


    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/recipe_list_text_layout">

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tittle_application"
                tools:text="Title" android:textSize="18sp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/course_count"
                tools:text="Subtitle"
                android:textSize="16sp"
                android:maxLines="3"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:layout_below="@+id/tittle_application"/>

    </RelativeLayout>

</RelativeLayout>